#!/usr/bin/env bash
# This script configures Nginx to run as the nginx user and listen on port 8080.

# Stop Nginx
service nginx stop

# Change the user in the Nginx configuration file
sed -i 's/user\s*nginx;/user nginx;/' /etc/nginx/nginx.conf

# Modify the default server block to listen on port 8080
sed -i 's/listen\s*80;/listen 8080;/' /etc/nginx/sites-available/default

# Restart Nginx
service nginx start
